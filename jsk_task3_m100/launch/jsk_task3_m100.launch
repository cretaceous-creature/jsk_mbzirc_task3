<!-- -*- mode: xml -*- -->
<launch>
  <arg name="paused" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="imagerbg" default="1"/>
  <arg name="teleop" default="true"/>
  <arg name="guidance" default="true"/>

 <!-- V launch -->
  <include file="$(find jsk_task3_m100)/launch/jsk_task3_v.launch" >
  </include>
 <!-- DJI SDK -->
  <include file="$(find dji_sdk)/launch/sdk_manifold.launch" >
  </include>

 <!-- TASK3 -->
  <group>
  <!-- launch the hsi_filter -->
  <include file="$(find dji_sdk_read_cam)/launch/manifold_cam.launch" >
  </include>
    <node pkg="jsk_task3_m100" type="uav_teleop_joy" name="uav_teleop_joy"
           launch-prefix="xterm -e" >
    </node>
  </group> 

  <!-- guidance -->
  <group if="$(arg guidance)">
    <node pkg="guidance" type="guidanceNode" name="guidanceNode">
    </node>
  </group>

</launch>

